@model int

@{
    ViewBag.Title = "Create Fields";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Fields for Project</h2>

<div id="fieldForm">
    @using (Html.BeginForm("AddField", "Project", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("projectId", Model)

        <div class="form-group">
            @Html.Label("Field Name")
            @Html.TextBox("fieldName", null, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.Label("Field Type")
            @Html.DropDownList("fieldType", new SelectList(new List<SelectListItem>
            {
                new SelectListItem { Text = "Text", Value = "Text" },
                new SelectListItem { Text = "Number", Value = "Number" }
            }), "Select Type", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <input type="submit" value="Add Field" class="btn btn-default" />
        </div>
    }
</div>

<div id="fieldsList">
    <h3>Existing Fields</h3>
    <ul>
        @foreach (var field in ViewBag.Fields)
        {
            <li>@field.Name (@field.Type)</li>
        }
    </ul>
</div>
